{
  "annotations": {
    "list": []
  },
  "description": "Detailed node-level metrics - CPU, Memory, Disk, Network per node",
  "editable": true,
  "graphTooltip": 1,
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "CPU",
      "type": "row"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "color": { "mode": "continuous-GrYlRd" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20,
            "drawStyle": "line",
            "showPoints": "never",
            "spanNulls": true
          }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 1 },
      "id": 1,
      "targets": [
        {
          "expr": "1 - avg(rate(node_cpu_seconds_total{mode=\"idle\", instance=~\"$node\"}[5m])) by (instance)",
          "legendFormat": "{{ instance }}"
        }
      ],
      "title": "CPU Usage",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 60,
            "drawStyle": "line",
            "showPoints": "never",
            "stacking": { "mode": "normal" }
          }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 1 },
      "id": 2,
      "targets": [
        {
          "expr": "avg(rate(node_cpu_seconds_total{instance=~\"$node\", mode!=\"idle\"}[5m])) by (mode)",
          "legendFormat": "{{ mode }}"
        }
      ],
      "title": "CPU Usage by Mode",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "drawStyle": "line",
            "showPoints": "never"
          }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 9 },
      "id": 3,
      "targets": [
        {
          "expr": "node_load1{instance=~\"$node\"}",
          "legendFormat": "1m"
        },
        {
          "expr": "node_load5{instance=~\"$node\"}",
          "legendFormat": "5m"
        },
        {
          "expr": "node_load15{instance=~\"$node\"}",
          "legendFormat": "15m"
        },
        {
          "expr": "count(node_cpu_seconds_total{instance=~\"$node\", mode=\"idle\"})",
          "legendFormat": "CPU Cores"
        }
      ],
      "title": "System Load Average",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 17 },
      "id": 101,
      "title": "Memory",
      "type": "row"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 40,
            "drawStyle": "line",
            "showPoints": "never",
            "stacking": { "mode": "normal" }
          }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 18 },
      "id": 10,
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes{instance=~\"$node\"} - node_memory_MemAvailable_bytes{instance=~\"$node\"}",
          "legendFormat": "Used"
        },
        {
          "expr": "node_memory_Buffers_bytes{instance=~\"$node\"}",
          "legendFormat": "Buffers"
        },
        {
          "expr": "node_memory_Cached_bytes{instance=~\"$node\"}",
          "legendFormat": "Cached"
        },
        {
          "expr": "node_memory_MemAvailable_bytes{instance=~\"$node\"} - node_memory_Buffers_bytes{instance=~\"$node\"} - node_memory_Cached_bytes{instance=~\"$node\"}",
          "legendFormat": "Free"
        }
      ],
      "title": "Memory Breakdown",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.7 },
              { "color": "red", "value": 0.9 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 18 },
      "id": 11,
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "horizontal",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "expr": "1 - (node_memory_MemAvailable_bytes{instance=~\"$node\"} / node_memory_MemTotal_bytes{instance=~\"$node\"})",
          "legendFormat": "{{ instance }}"
        }
      ],
      "title": "Memory Usage Gauge",
      "type": "gauge"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 26 },
      "id": 102,
      "title": "Disk",
      "type": "row"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.7 },
              { "color": "red", "value": 0.85 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 27 },
      "id": 20,
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "horizontal",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "expr": "1 - (node_filesystem_avail_bytes{instance=~\"$node\",fstype!~\"tmpfs|overlay\"} / node_filesystem_size_bytes{instance=~\"$node\",fstype!~\"tmpfs|overlay\"})",
          "legendFormat": "{{ instance }} {{ mountpoint }}"
        }
      ],
      "title": "Disk Usage by Mountpoint",
      "type": "gauge"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 15,
            "drawStyle": "line",
            "showPoints": "never"
          }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 27 },
      "id": 21,
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total{instance=~\"$node\"}[5m])",
          "legendFormat": "{{ device }} read"
        },
        {
          "expr": "rate(node_disk_written_bytes_total{instance=~\"$node\"}[5m])",
          "legendFormat": "{{ device }} write"
        }
      ],
      "title": "Disk I/O",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 35 },
      "id": 103,
      "title": "Network",
      "type": "row"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 15,
            "drawStyle": "line",
            "showPoints": "never"
          }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 36 },
      "id": 30,
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{instance=~\"$node\",device!~\"lo|veth.*|docker.*|br.*\"}[5m])",
          "legendFormat": "{{ device }} RX"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{instance=~\"$node\",device!~\"lo|veth.*|docker.*|br.*\"}[5m])",
          "legendFormat": "{{ device }} TX"
        }
      ],
      "title": "Network Bandwidth",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "pps",
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 15,
            "drawStyle": "line",
            "showPoints": "never"
          }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 36 },
      "id": 31,
      "targets": [
        {
          "expr": "rate(node_network_receive_errs_total{instance=~\"$node\",device!~\"lo|veth.*|docker.*|br.*\"}[5m])",
          "legendFormat": "{{ device }} RX errors"
        },
        {
          "expr": "rate(node_network_transmit_errs_total{instance=~\"$node\",device!~\"lo|veth.*|docker.*|br.*\"}[5m])",
          "legendFormat": "{{ device }} TX errors"
        },
        {
          "expr": "rate(node_network_receive_drop_total{instance=~\"$node\",device!~\"lo|veth.*|docker.*|br.*\"}[5m])",
          "legendFormat": "{{ device }} RX drops"
        }
      ],
      "title": "Network Errors & Drops",
      "type": "timeseries"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["kubernetes", "node", "monitoring"],
  "templating": {
    "list": [
      {
        "current": {},
        "datasource": "Prometheus",
        "definition": "label_values(node_uname_info, instance)",
        "hide": 0,
        "includeAll": true,
        "multi": true,
        "name": "node",
        "query": "label_values(node_uname_info, instance)",
        "refresh": 2,
        "regex": "",
        "type": "query"
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "title": "Node Details",
  "uid": "k8s-node-details",
  "version": 1
}
